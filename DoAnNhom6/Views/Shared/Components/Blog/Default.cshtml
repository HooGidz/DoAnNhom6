@model IEnumerable<DoAnNhom6.Models.TblBlog>

@foreach (var item in Model)
{
    string sUrl = $"/blog/{item.Alias}-{item.BlogId}";
    <div class="col-md-6">
        <div class="blog-item">
            <div class="blog-img">
                <img src="@item.Image" alt="Blog">
            </div>
            <div class="blog-content">
                <h2 class="blog-title">@item.Title </h2>
                <div class="blog-meta">
                    <p><i class="far fa-user"></i>@item.CreatedBy</p>
                    <p><i class="far fa-list-alt"></i>@item.Category.Name</p>
                    <p><i class="far fa-calendar-alt"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</p>
                    <p><i class="far fa-comments"></i>10</p>
                </div>
                <div class="blog-text">
                    <p>
                        @item.Description
                    </p>
                    <a class="btn custom-btn" href="@sUrl">Xem thêm</a>
                </div>
            </div>
        </div>
    </div>
}
