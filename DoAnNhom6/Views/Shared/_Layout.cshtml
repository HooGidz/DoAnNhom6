    <script>
        $(document).ready(function () {
            $(".product-tab-style-2 a").on("click", function (e) {
                e.preventDefault(); // Đúng cú pháp

                // Xóa class 'active' khỏi tất cả các thẻ <a>
                $(".product-tab-style-2 a").removeClass("active");

                // Thêm class 'active' vào thẻ <a> được nhấn
                $(this).addClass("active");

                // Ẩn tất cả các nội dung tab
                $(".tab-pane").removeClass("active show");

                // Hiển thị nội dung tab tương ứng
                const target = $(this).attr("href"); // Lấy giá trị href
                $(target).addClass("active show");
            });
        });
    </script>

