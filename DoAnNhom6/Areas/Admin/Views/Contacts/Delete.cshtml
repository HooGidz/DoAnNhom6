@model DoAnNhom6.Models.TblContact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-body">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa Contact</h1>
                </div>
                <div class="col sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header">
                            <h3 class="card-title">Xóa Contact</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exempleInputEmail1">Tên:</label>
                                @Html.DisplayFor(model => model.Name)
                            </div>
                            <div class="form-group">
                                <label for="exempleInputPassword1">Phone:</label>
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                            <div class="form-group">
                                <label for="exempleInputPassword1">Email:</label>
                                @Html.DisplayFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                <label for="exempleInputPassword1">Tin nhắn:</label>
                                @Html.DisplayFor(model => model.Message)
                            </div>
                            <div class="form-group">
                                <label for="exempleInputPassword1">Ngày tạo:</label>
                                @Html.DisplayFor(model => model.CreatedDate)
                            </div>
                            <div class="form-group">
                                <label for="exempleInputPassword1">CreateBy:</label>
                                @Html.DisplayFor(model => model.CreatedBy)
                            </div>
                           
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ContactId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
